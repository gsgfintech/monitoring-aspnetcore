@using static Capital.GSG.FX.Data.Core.SystemData.AlertLevel;
@using static StratedgemeMonitor.AspNetCore.ViewComponents.AlertsListType;

@model StratedgemeMonitor.AspNetCore.ViewModels.AlertsListViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 style="display:inline-block">@Html.DisplayFor(m => Model.Header) <small>(@Model.Alerts.Count)</small></h4>
        @if (Model.ListType == Open)
        {
            <div class="pull-right">
                <a class="@(Model.Alerts.Count > 0 ? "btn btn-sm btn-danger" : "btn btn-sm btn-danger disabled")" asp-action="CloseAll">Close All</a>
            </div>
        }
    </div>
    @if (Model.Alerts.Count > 0)
    {
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => Model.Alerts.First().Timestamp)
                </th>
                <th>
                    @Html.DisplayNameFor(m => Model.Alerts.First().Source)
                </th>
                <th>
                    @Html.DisplayNameFor(m => Model.Alerts.First().Subject)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Alerts)
            {
                <tr class="@(item.Level <= INFO ? "bg-info" : item.Level <= WARNING ? "bg-warning" : "bg-danger")">
                    <td>
                        @Html.DisplayFor(modelItem => item.Timestamp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Source)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.AlertId"><span class="glyphicon glyphicon-plus"></span></a>
                            @if (Model.ListType == Open)
                            {
                                <a class="btn btn-danger" asp-action="Close" asp-route-id="@item.AlertId"><span class="glyphicon glyphicon-trash"></span></a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="panel-body">
            <p>No alert</p>
        </div>
    }
</div>
