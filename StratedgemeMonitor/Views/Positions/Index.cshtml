@model StratedgemeMonitor.ViewModels.Positions.PositionsListViewModel

@{
    ViewBag.Title = "Current Positions";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Current Positions</h2>
            </div>
            <div class="panel-body">
                @if (Model.Positions.Count > 0)
                {
                    @foreach (var positionByAccount in Model.Positions)
                    {
                        @if (positionByAccount.Value.Count > 0)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>@Html.DisplayFor(m => positionByAccount.Key)</h4>
                                </div>
                                <table class="table table-hover">
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => positionByAccount.Value.First().Cross)</th>
                                        <th>@Html.DisplayNameFor(m => positionByAccount.Value.First().PositionQuantity)</th>
                                        <th>@Html.DisplayNameFor(m => positionByAccount.Value.First().AverageCost)</th>
                                        <th>@Html.DisplayNameFor(m => positionByAccount.Value.First().UnrealizedPnlUsd)</th>
                                        <th>@Html.DisplayNameFor(m => positionByAccount.Value.First().RealizedPnlUsd)</th>
                                        <th>@Html.DisplayNameFor(m => positionByAccount.Value.First().LastUpdate)</th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in positionByAccount.Value)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cross)
                                            </td>
                                            <td class="@(item.PositionQuantity > 0 ? "bg-success" : item.PositionQuantity < 0 ? "bg-danger" : "")">
                                                @Html.DisplayFor(modelItem => item.PositionQuantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AverageCost)
                                            </td>
                                            <td class="@(item.UnrealizedPnlUsd > 0 ? "bg-success" : item.UnrealizedPnlUsd < 0 ? "bg-danger" : "")">
                                                @Html.DisplayFor(modelItem => item.UnrealizedPnlUsd)
                                            </td>
                                            <td class="@(item.RealizedPnlUsd > 0 ? "bg-success" : item.RealizedPnlUsd < 0 ? "bg-danger" : "")">
                                                @Html.DisplayFor(modelItem => item.RealizedPnlUsd)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastUpdate)
                                            </td>
                                            <td>
                                                <a class="btn btn-xs btn-primary" asp-action="Details" asp-route-broker="@item.Broker" asp-route-account="@item.Account" asp-route-cross="@item.Cross"><span class="glyphicon glyphicon-plus"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        }
                    }
                }
                else
                {
                    <p>No position</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Accounts</h2>
            </div>
            @if (Model.Accounts.Count > 0)
            {
                <table class="table table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => Model.Accounts.First().Broker)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.Accounts.First().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.Accounts.First().LastUpdate)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Accounts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Broker)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastUpdate)
                            </td>
                            <td>
                                <a class="btn btn-xs btn-primary" asp-action="AccountDetails" asp-route-broker="@item.Broker" asp-route-accountName="@item.Name"><span class="glyphicon glyphicon-plus"></span></a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <div class="panel-body">
                    <p>No account</p>
                </div>
            }
        </div>
    </div>
</div>