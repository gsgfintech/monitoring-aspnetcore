@using static Capital.GSG.FX.Data.Core.SystemData.AlertLevel;
@using static Capital.GSG.FX.Data.Core.SystemData.AlertStatus;

@model StratedgemeMonitor.Models.Alerts.AlertModel

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.AlertId)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.AlertId)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Timestamp)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Timestamp)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Source)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Source)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Subject)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Subject)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Body)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.Body)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Level)
    </dt>
    <dd class="@(Model.Level <= INFO ? "text-success" : Model.Level <= WARNING ? "text-warning" : "text-danger")">
        @Html.DisplayFor(model => model.Level)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="@(Model.Status == CLOSED ? "text-success" : "text-danger")">
        @Html.DisplayFor(model => model.Status)
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.ClosedTimestamp)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.ClosedTimestamp)
    </dd>
</dl>