@using static Capital.GSG.FX.Data.Core.NewsBulletinData.NewsBulletinType;
@using static Capital.GSG.FX.Data.Core.NewsBulletinData.NewsBulletinStatus;

@model StratedgemeMonitor.Models.NewsBulletins.NewsBulletinModel

@{
    ViewBag.Title = Model.ToString();
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="@(Model.BulletinType == EXCHANGE_AVAILABLE ? "panel panel-success" : Model.BulletinType == EXCHANGE_NOT_AVAILABLE ? "panel panel-danger" : Model.BulletinType == REGULAR ? "panel panel-info" : "panel panel-default")">
            <div class="panel-heading">
                <h4>@Model.ToString()</h4>
            </div>
            <div class="panel-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Timestamp)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Timestamp)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Source)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Source)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Origin)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Origin)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Message)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Message)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.BulletinType)
                    </dt>
                    <dd class="@(Model.BulletinType == EXCHANGE_AVAILABLE ? "text-success" : Model.BulletinType == EXCHANGE_NOT_AVAILABLE ? "text-danger" : Model.BulletinType == REGULAR ? "text-info" : "")">
                        @Html.DisplayFor(model => model.BulletinType)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="@(Model.Status == CLOSED ? "text-success" : "text-danger")">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ClosedTimestamp)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ClosedTimestamp)
                    </dd>
                </dl>
            </div>
            <div class="panel-footer">
                <a class="btn btn-sm btn-primary" asp-action="Index">Back</a>
            </div>
        </div>
    </div>
</div>