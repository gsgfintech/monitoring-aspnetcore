@using static Capital.GSG.FX.Data.Core.MarketData.FXEventLevel

@model IEnumerable<StratedgemeMonitor.Models.FXEvents.FXEventModel>

<table class="table table-hover">
    @foreach (var item in Model)
    {
        <tr class="@(item.Level == LOW ? "bg-success" : item.Level == MEDIUM ? "bg-warning" : item.Level == HIGH ? "bg-danger" : "")">
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                <a class="btn btn-xs btn-primary" asp-action="Details" asp-route-id="@item.Id"><span class="glyphicon glyphicon-plus"></span></a>
            </td>
        </tr>
    }
</table>
